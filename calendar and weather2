<body>

<h1>AuraAI Cosmic Dream Wave</h1>

<div id="calendar-selection">
  <label><input type="checkbox" value="Gregorian" checked> Gregorian</label>
  <!-- Future calendar checkboxes dynamically added here -->
</div>

<div id="calendar-display"></div>

<script type="module">
  import auraAI from './AuraAICore.js';

  const calendarSelection = document.getElementById('calendar-selection');
  const calendarDisplay = document.getElementById('calendar-display');

  function renderCalendars() {
    calendarDisplay.innerHTML = '';
    const today = new Date();

    const reps = auraAI.getDateRepresentations(today);
    const novelty = auraAI.calculateNoveltyForDate(today);

    for (const calName of auraAI.selectedCalendars) {
      const dayDiv = document.createElement('div');
      dayDiv.className = 'calendar-day';
      dayDiv.dataset.calendar = calName;

      dayDiv.innerHTML = `
        <strong>${calName}</strong><br/>
        <span class="date">${reps[calName]}</span>
        <span class="emoji" title="${novelty.mood.mood}">${novelty.mood.emoji}</span>
        <div class="tooltip">Today's mood state from cosmic novelty calculation.</div>
      `;
      calendarDisplay.appendChild(dayDiv);
    }
  }

  // Event listeners for toggling calendars (future calendars can be added dynamically)
  calendarSelection.addEventListener('change', (e) => {
    const name = e.target.value;
    if (e.target.checked) {
      auraAI.selectCalendar(name);
    } else {
      auraAI.deselectCalendar(name);
    }
    renderCalendars();
  });

  renderCalendars();

</script>

</body>
</html>
